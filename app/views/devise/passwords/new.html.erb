<div class="title">
  <h1 class="page-header"> Forgot your password? </h1>
</div>

<div class="container">
	<div class="well">
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>
		  <%= f.email_field :email, autofocus: true, placeholder: "Email", :class => "form-control" %></br>
			<%= f.submit "Send me reset password instructions", :class => "btn btn-primary btn-sm pull-right" %></br>
		<% end %></br>
	</div>

	</br>
	<%= link_to "Back", "/users/sign_in", :class => "btn btn-info " %> 
</div>