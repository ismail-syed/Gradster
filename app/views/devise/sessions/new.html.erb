<div class="well">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="container">
	      <%= devise_error_messages! %>
			<div class="row" style="margin-top:20px">
			    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
					<form role="form">
						<fieldset>
							<h2>Sign In</h2>
							<hr class="colorgraph">
							<div class="form-group">
		            			<%= f.email_field :email, autofocus: true , :class => "form-control input-lg", :placeholder => "Email Address" %>
							</div>
							<div class="form-group">
								<%= f.password_field :password, autofocusocomplete: "off", :class => "form-control input-lg", :placeholder => "Password"%> 
							</div>
							<span class="button-checkbox">
								<input type="checkbox"> Remember me
			                    <input type="checkbox" name="remember_me" id="remember_me" checked="checked" class="hidden">
								<a href="/users/password/new" class="btn btn-link pull-right">Forgot Password?</a>
							</span>
							<hr class="colorgraph">
							<div class="row">
								<div class="col-md-7">
			                        <input type="submit" class="btn btn-lg btn-success btn-block" value="Sign In">
								</div>
								<div class="">
									 <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook),:class => "btn btn-lg btn-primary" %> 
								</div>
							</div>
						</fieldset>
					</form>
				</div>
			</div>
		</div>
	<% end %>
</div>



