<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @course.name %>
</p>




<br />

<p>
	<h4> Components </h4>

	<tbody>
	    <% @course.components.each do |component| %>
	      <tr>
	        <td><%= component.name %></td>
	        <td><%= component.component_weight %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

</p>	


<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %> 
