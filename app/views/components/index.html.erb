<h1>Listing components</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Component weight</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @components.each do |component| %>
      <tr>
        <td><%= component.name %></td>
        <td><%= component.component_weight %></td>
        <td><%= link_to 'Show', component %></td>
        <td><%= link_to 'Edit', edit_component_path(@course, component) %></td>
        <td><%= link_to 'Destroy', (@course, component), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

