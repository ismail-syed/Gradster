<!DOCTYPE html>
<html>
	<head>
	  <title>Gradster</title>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>


	<!-- NAVBAR -->
		<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
			<div class="navbar-hearder>">

				<% if user_signed_in? %> 
					<a class="navbar-brand" href="/courses">Gradster</a>
				<% else %>
					<a class="navbar-brand" href="/">Gradster</a>					
				<% end %> 	

				<ul class="navbar-right navbar-nav nav"> 
					<% if user_signed_in? %>
						<li> <%= link_to current_user.profile_name , edit_user_registration_path %> </li>
						<li> <%= link_to "Log Out" , destroy_user_session_path, method: :delete %> </li>
					<% else %>
						<li> <%= link_to "Register" , new_user_registration_path %> </li>
						<li> <%= link_to "Log in" , user_session_path %> </li>
					<% end %>
				</ul>

			</div>
		</nav>		


		<div class ="container">

			<% if flash[:notice] %> 
				<div class="alert alert-info">
					<button class="close" data-dismiss="alert"> x </button>
					<%= flash[:notice] %> 
				</div>
			<% end %> 
			
			<%= yield %>
		</div>


	</div>

	</body>
</html>
