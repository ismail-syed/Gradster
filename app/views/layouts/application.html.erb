<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	  <title>Gradster</title>
	  <%= stylesheet_link_tag  "application", media: "all" %>
	  <%= javascript_include_tag 'jquery', "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>


	<!-- NAVBAR -->
		<nav class="navbar navbar-default navbar-static-top" role="navigation">
			<div class="container">
				<div class="navbar-hearder>">
					<% if user_signed_in? %> 
						<a class="navbar-brand" href="/courses">Gradster</a>
					<% else %>
						<a class="navbar-brand" href="/">Gradster</a>					
					<% end %> 	
				   <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				      <span class="icon-bar"></span>
				      <span class="icon-bar"></span>
				      <span class="icon-bar"></span>
			    </button>
				</div>
	
				<div class="navbar-collapse collapse">
					<ul class="navbar-right navbar-nav nav"> 
			      <li> <%= link_to "Learn More" , "/static_pages/learn_more" %> </li>

						<% if user_signed_in? %>
							<li> <%= link_to current_user.profile_name.capitalize , edit_user_registration_path %> </li>
							<li> <%= link_to "Log Out" , destroy_user_session_path, method: :delete %> </li>
						<% else %>
	 						<li> <%= link_to "Sign Up" , new_user_registration_path %> </li>
							<li> <%= link_to "Log in" , user_session_path %> </li>
 						<% end %>
					</ul>
				</div>
			</div>

		</nav>		


		<div class ="container wrapper">
			<% if flash[:notice] || flash[:alert] %> 
				<div class="alert alert-info">
					<button class="close" data-dismiss="alert"> x </button>
					<%= flash[:notice] %> 
					<%= flash[:alert] %> 
				</div>
			<% end %> 
			<%= yield %>
      <div class="push"></div> 
		</div>

		<div class="footer">
			<div class="container">
				<h4 class="pull-left"> Â© 2014 Gradster </h4>
				<h4 class="pull-right" id="ismail">Created by: <a href="https://github.com/isyed867" id="name-link">Ismail Syed</a></h4>
			</div>
		</div>

	</div>

	</body>
</html>
